<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/main_photo"
        android:layout_width="65.0dip"
        android:layout_height="65.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="@color/primary_text_default_material_light"
        android:gravity="center"
        android:id="@+id/main_name"
        android:paddingLeft="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="70.0dip"
        android:layout_toRightOf="@id/main_photo"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/main_photo"
        style="@style/TextAppearance.AppCompat.Large" />
    <TextView
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textColor="@color/primary_text_default_material_light"
        android:gravity="center"
        android:id="@+id/main_surname"
        android:paddingLeft="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="70.0dip"
        android:layout_toRightOf="@id/main_name"
        android:layout_alignTop="@id/main_name"
        android:layout_toEndOf="@id/main_name"
        style="@style/TextAppearance.AppCompat.Large" />
    <TextView
        android:id="@+id/main_uid"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_surname"
        android:layout_toEndOf="@id/main_surname" />
    <ProgressBar
        android:id="@+id/pBarList"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/main_photo"
        android:layout_alignBottom="@id/main_photo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@id/main_photo"
        android:layout_alignParentStart="true" />
</RelativeLayout>